.toolbar {
	z-index: $toolbar-z-index;
	border: 1px solid #ddd;
	background-color: #fff;
	width: 220px;

	.item {
		padding: 15px;

		.title {
			font-weight: 700;
			margin-bottom: 5px;
		}

		.border-text {
			border: 1px solid #ddd;
			padding: 10px;
		}

		.text {
			padding: 10px;
		}

		.text-center {
			text-align: center;
		}
	}
	
	.post-toc {
		position: sticky;
		top: 30px;
		padding: 30px;

		.title {
			font-weight: 700;
			margin-bottom: 5px;
		}

		.border-text {
			border: 1px solid #ddd;
			padding: 5px;
		}

		ol {
			padding-inline-start: 20px;
		}
	}	

}

@media screen and (max-width: $pc_pe_dividing_1) {
    .toolbar {
        display: none !important;
    }
}