.sidebar {
	position: fixed;
	overflow-y: auto;
	width: $sidebar-width-1;
	height: 100%;
	z-index: $sidebar-z-index;
	background-color: $sidebar-bg-color;

	.sidebar-author {
		text-align: center;
		font-weight: 700;
	}

	.sidebar-list-container {
		padding: 7%;
		max-height: 100%;
	}

	.sidebar-footer {
		position: fixed;
		width: $sidebar-width-1;
		bottom: 0px;
		background-color: $sidebar-footer-bg-color;
		padding: 10px 0px;
		display: flex;
		justify-content: space-around;
		.item { text-align: center; }
		*,.mini-text { color: $sidebar-footer-color;}
	}

	.mini-text {
		color: $sidebar-text-mini-text-color;
		font-size: 12px;
		font-weight: 500;
	}

	.list-group {
  		margin-bottom: 20px;
  		padding-left: 0;
	}


	.list-group-item {
		position: relative;
  		display: block;
  		padding: 10px 15px;
  		margin-bottom: -1px;
 		background-color: $sidebar-list-group-item-bg-color;
 		color: $sidebar-list-group-item-color;

  		&:hover,
  		&:focus {
    		color: $sidebar-list-group-item-hover-color;
    		background-color: $sidebar-list-group-item-hover-bg-color;
  		}
  	}

  	.list-group-empty {
  		position: relative;
  		display: block;
  		padding: 10px 15px;
  		margin-bottom: -1px;
 		background-color: $sidebar-list-group-item-bg-color;
 		color: $sidebar-list-group-item-color;
  	}

	.list-group-item-current {
		position: relative;
  		display: block;
  		padding: 10px 15px;
  		margin-bottom: -1px;
  		color: $sidebar-list-group-item-current-color;
    	background-color: $sidebar-list-group-item-current-bg-color;
  	}

	.badge {
		font-weight: bold;
        float: right;
		padding: 3px 6px 3px 6px;
		color: $sidebar-badge-color;
		background-color: $sidebar-badge-bg-color;
		border-radius: 20px;
		font-size: 15px;
	}
}

@media screen and (max-width: $pc_pe_dividing_1) {
    .sidebar {
        width: $sidebar-width-2;
        .sidebar-footer {
        	width: $sidebar-width-2;
        }
    }
}

@media screen and (max-width: $pc_pe_dividing_2) {
    .sidebar {
        width: $sidebar-width-3;
        .sidebar-footer {
        	width: $sidebar-width-3;
        }
    }
}

@media screen and (max-width: $pc_pe_dividing_3) {
    .sidebar {
        float: left;
    	width: $sidebar-width-4;
   		margin-left: $-sidebar-width-4;
    	transition: 0.8s all;
    }
    .sidebar-display {
    	margin-left: 0;
    }
    .hide {
    	display: none;
    }
    .appear {
    	display: block !important;
    }
}

.sidebar::-webkit-scrollbar {
	width: 0;
	height: 0;
}