.post {
	z-index: $post-z-index;
	background-color: $post-bg-color;
	line-height: 150%;
	letter-spacing: 1.3px;
	font-size: 17px;

	.header .title,.post-item .title,.post-bgimg-item .inner .title{
		font-weight: 300;
		line-height: 100%;
	}

	.post-item .title,.post-bgimg-item .inner .title{
		margin: 8px;
		margin-left: 0;
	}

	.header {
		background-color: $post-header-bg-color;
		padding: 25px;
		border-bottom: 1px solid $post-header-border-bottom-color;
		.title {
			font-size: 30px !important;
			color: $post-header-title-color;
			margin: 3px;
		}
	}

	.post-item,.post-bgimg-item,.breadcrumb,.post-text,.prevnext,.comments
	{
		margin: 20px;
		border-radius: 7px;
	}

	.post-item {
		padding: 30px;
		background-color: $post-item-bg-color;
		border: 1px solid $post-item-border-color;
		box-shadow: 0px 0px 15px $post-item-shadow-color;
		display: block;
		
		.title {
			font-size: 25px !important;
		}

		&:hover {
			box-shadow: 0px 0px 15px $post-item-hover-shadow-color;
		}
	}

	.post-bgimg-item {
		background-size: cover;
		box-shadow: 0px 0px 15px $post-item-shadow-color;
		display: block;
		color: #fff;

		.inner {
			padding: 30px;
			background: linear-gradient(180deg,transparent,$post-item-bottom-shadow-color);
			border-radius: 7px;

			a{ color: inherit; }

			.title {
				font-size: 25px !important;
			}

			.meta {
				padding: 3px;
				font-size: 14px;
				font-weight: 500;
			}
		}

		&:hover {
			box-shadow: 0px 0px 15px $post-item-hover-shadow-color;
		}
	}

	.post-item,.post-bgimg-item,.header {
		.meta >span {
			display: inline-block;
			margin-right: 10px;
		}
	}

	.post-item,.header {
		.meta {
			padding: 3px;
			color: $post-meta-color;
			font-size: 15px;
			font-weight: 500;
		}
	}

	.post-item,.post-bgimg-item,.header {
		blockquote { border: none; }
	}

	.excerpt {
		word-wrap: break-word;
		a {
  			color: $post-text-link-color;
  			border-bottom: 1px solid $post-text-link-color;
		}
		a:hover {
  			color: $post-text-link-hover-color;
  			border-bottom: 1px solid $post-text-link-hover-color;
		}
		h1,h2,h3,h4,h5,h6 {
			font-size: medium;
			font-weight: normal;
			display: inline-block;
			margin: 0 10px;
			&:before {
				content: "# ";
			}
		}
	}

	.breadcrumb {
		background-color: $post-breadcrumb-bg-color;
		border: 1px solid $post-breadcrumb-border-color;
		padding: 10px;
		display: flex;
		justify-content: space-between;

		@media screen and (max-width: $pc_pe_dividing_3) {
    		.url {
    			display: none;
			}
		}
	}

	.post-text {
		background-color: $post-text-bg-color;
		border: 1px solid $post-text-border-color;
		padding: 30px;

		a {
  			color: $post-text-link-color;
  			border-bottom: 1px solid $post-text-link-color;
		}
		a:hover {
  			color: $post-text-link-hover-color;
  			border-bottom: 1px solid $post-text-link-hover-color;
		}
		p {
			white-space: pre-wrap;
		}

		h1,h2,h3,h4,h5,h6 {
			line-height: 100%;
			background: linear-gradient(to bottom,transparent 60%,$h-bg-color 0) no-repeat;
			display: table;
    		font-weight: 100;

    		&:before {
    			content: '# ';
    			color: $h-cross-color;
    		}
		}
	}

	.end-post-meta {
		padding: 3px;
		color: $post-meta-color;
		font-size: 14px;
		font-weight: 500;
		
	}

	.end-post-meta >span {
		display: inline-block;
		margin-right: 10px;
	}

	.end-post-meta >span >a {
		color: $post-meta-color;
	}

	.prevnext {
		display: flex;
		justify-content: space-between;
		.prev,.next{
			border-radius: 20px;
			padding: 10px;
		}
		.prev {
			border: 1px solid $post-prev-border-color;
			background-color: $post-prev-bg-color;
			color: $post-prev-color;
		}
		.next {
			border: 1px solid $post-next-border-color;
			background-color: $post-next-bg-color;
			color: $post-next-color;
		}
		a {display: block;}
	}

	.comments {
		background-color: $comments-bg-color;
		border: 1px solid $comments-border-color;
		padding: 30px;
	}
}

@media screen and (max-width: $pc_pe_dividing_3) {
	.post {
		font-size: 15px !important;
		.post-item,.post-bgimg-item,.breadcrumb,.post-text,.prevnext,.comments
		{
			margin: 15px;
			border-radius: 7px;
		}
		.post-item,.post-text,.post-bgimg-item .inner {
    		padding: 15px;
    	}
    	.post-text>h1,h2,h3,h4,h5,h6 {
    		margin: 15px;
    		margin-left: 0;
    	}
   	}
}