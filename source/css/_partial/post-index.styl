.post-index {
	z-index: $post-z-index;
	background-color: $post-bg-color;
	
	.header {
		background-color: $post-header-bg-color;
		font-weight: 300;
		padding: 25px;
		border-bottom: 1px solid $post-header-border-bottom-color;

		.title {
			font-size: 30px;
			color: $post-header-title-color;
			padding: 3px;
		}

		.subtitle {
			padding: 3px;
			color: $post-header-meta-color;
			font-size: 15px;
			font-weight: 500;
		}
	}

	.post-item {
		margin: 20px;
		padding: 30px;
		background-color: $post-item-bg-color;
		border: 1px solid $post-item-border-color;
		border-radius: 5px;
		
		.title {
			font-size: 25px;
			margin-bottom: 10px;
		}

		.meta {
			padding: 3px;
			color: $post-item-meta-color;
			font-size: 14px;
			font-weight: 500;
		}

		&:hover {
			box-shadow: 0px 0px 15px $post-item-hover-shadow-color;
		}
	}

	.post-bgimg-item {
		margin: 20px;
		border-radius: 5px;
		background-size: cover;

		*{color: #fff !important;}

		.inner {
			padding: 30px;
			background: linear-gradient(180deg,transparent,rgba(0,0,0,.5));

			.title {
				font-size: 25px;
				margin-bottom: 10px;
			}

			.meta {
				padding: 3px;
				font-size: 14px;
				font-weight: 500;
			}
		}

		&:hover {
			box-shadow: 0px 0px 15px $post-item-hover-shadow-color;
		}
	}
}