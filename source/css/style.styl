hexo-config-uq(config) {
    $ret = hexo-config(config);
    $ret = unquote($ret);
    return $ret;
}

@import "_variable/main";
@import "_partial/main";
@import "_other/main";

body {
	background-color: rgb(239,239,239);
	color: #555;
	margin: 0px;
	font-family: hexo-config-uq('font_family');
	-webkit-font-smoothing: antialiased;
}

*::selection {
	background: $selection-bg-color; 
	color: $selection-color;
}

.main {
	margin: 0 8%;
	box-shadow: 0 0 40px $body-shadow-color;
	height: auto;
}

@media screen and (max-width: $pc_pe_dividing_2) {
    .main {
    	margin: 0px;
	}
}

.article {
	margin-left: $dis-sidebar_1;
	width: 84% !important;
	min-height: 800px;
	display: table;
	background-color: $post-bg-color;
}

@media screen and (max-width: $pc_pe_dividing_1) {
    .article {
    	margin-left: $dis-sidebar_2;
        width: 77.4% !important;
        display: block;
    }
}

@media screen and (max-width: $pc_pe_dividing_2) {
    .article {
        margin-left: 0;
        width: 100% !important;
        display: block;
    }
}

.article-cell-body {
	display: table-cell;
	vertical-align: top;
}

@media screen and (max-width: $pc_pe_dividing_1) {
    .article-cell-body {
    	display: block;
    }
}
