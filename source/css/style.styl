@import "_variable/main";
@import "_partial/main";
@import "_other/main";

body {
	background-color: rgb(239,239,239);
	color: rgb(119, 119, 119);
	margin: 0px;
}

.main {
	margin: 0 8%;
	box-shadow: 0 0 40px rgba(0, 0, 0, 0.3);
	height: auto;
}

@media screen and (max-width: $pc_pe_dividing_2) {
    .main {
    	margin: 0px;
	}
}

.article {
	margin-left: $dis-sidebar_1;
	width: 83.5% !important;
	min-height: 800px;
	background-color: #f1f3f4;

	a {
  		color: #3498db;
	}

	a:hover {
  		color: #0056b3;
	}
}

@media screen and (max-width: $pc_pe_dividing_1) {
    .article {
    	margin-left: $dis-sidebar_2;
        width: 77.4% !important;
    }
}

@media screen and (max-width: $pc_pe_dividing_2) {
    .article {
        margin-left: 0;
        width: 100% !important;
    }
}