<div class="post">
	<%- partial('_partial/warning') %>
	<div class="header">
		<div class="title"><%= config.title %></div>
		<div class="meta"><%= config.subtitle %></div>
	</div>
	<% page.posts.each(function (post) { %>
	  <% if(post.bgimg){ %>
		<div class="post-bgimg-item" style="background-image: url(<%= post.bgimg %>);">
			<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><div class="inner">
	  <% }else{ %>
		<div class="post-item"><div>
	  <% } %>
			<div class="title">
				<a href="<%- url_for(post.path) %>"><%= post.title %></a>
			</div>
			<div>
				<% if(post.excerpt){ %>
					<%- post.excerpt %>
				<% }else{ %>
					<%- theme.post_default_excerpt %>
				<% } %>
			</div>    
			<hr />
			<div class="meta">
				<span><i class="fa fa-user" aria-hidden="true"></i> <%= config.author %></span>
				<span><i class="fa fa-clock-o" aria-hidden="true"></i><%- date(post.date, " YYYY ") %>年<%- date(post.date, " MM ") %>月<%- date(post.date, " DD ") %>日</span>
        		<% if(post.top){ %>
            		<span><i class="fa fa-thumb-tack" aria-hidden="true"></i> 置顶</span>
        		<% } %>
        		<% if(post.password){ %>
        			<span><i class="fa fa-lock" aria-hidden="true"></i> 加密</span>
      			<% } %>
      		</div>
		</div></div>
	<% }) %>

	<%- partial('_partial/paginator') %>

</div>