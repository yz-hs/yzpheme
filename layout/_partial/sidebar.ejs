<div class="sidebar">

  <div class="sidebar-avatar-container">
  	<img src="<%= theme.avatar.url %>" class="sidebar-avatar bounce" />
  </div>

  <div class="sidebar-author">
    <%= config.author %><br />
    <div class="mini-text"><%= theme.short_des %></div>
  </div>

  <br /><br />

  <div class="sidebar-list-container">
  
  <div class="mini-text">导航</div>

  <br />

  <div class="list-group">
  	<% for (name in theme.menu) { %>
  	 <a class="list-group-item" href="<%- url_for(theme.menu[name]) %>"><i class="fa <%= theme.icon[name] %> fa-fw" aria-hidden="true"></i>&nbsp; <%- __('Menu.' + name) %>
  	    <% if(theme.menu_name[name].name=="Archives"){ %>
  	    	<div class="badge"><%= site.posts.length %></div>
  	    <% }else if(theme.menu_name[name].name=="tags"){ %>
  	    	<div class="badge"><%= site.tags.length %></div>
  	    <% }else if(theme.menu_name[name].name=="categories"){ %>
  	    	<div class="badge"><%= site.categories.length %></div>
  	    <% }else{} %>
      </a>
    <% } %>
  </div>

  </div>

  <div class="sidebar-footer">
  	<div class="item">
  		<a href="#back-to-top"><i class="fa fa-hand-o-up" aria-hidden="true"></i><div class="mini-text">回到顶部</div></a>
  	</div>
  	<div class="item">
  		<a href="/atom.xml"><i class="fa fa-feed" aria-hidden="true"></i><div class="mini-text">RSS地址</div></a>
  	</div>
  </div>
</div>